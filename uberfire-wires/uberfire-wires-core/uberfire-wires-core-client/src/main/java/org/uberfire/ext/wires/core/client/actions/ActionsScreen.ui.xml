<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <g:SimplePanel>
    <b:PanelGroup ui:field="accordion">
      <b:Panel>
        <b:PanelHeader dataToggle="COLLAPSE" text="Canvas Actions" ui:field="headerActions"/>
        <b:PanelCollapse ui:field="collapseActions" in="true">
          <b:PanelBody>
            <g:SimplePanel ui:field="actions"/>
          </b:PanelBody>
        </b:PanelCollapse>
      </b:Panel>
    </b:PanelGroup>
  </g:SimplePanel>

</ui:UiBinder>