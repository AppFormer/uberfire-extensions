<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base">

  <b:Form type="HORIZONTAL">
    <b:Fieldset>
      <b:ControlGroup ui:field="nameGroup">
        <b:ControlLabel for="name">
          <font color="red">*</font>
          <base:InlineLabel ui:field="fileTypeLabel" text="Name"/>
        </b:ControlLabel>
        <b:Controls>
          <b:TextBox b:id="name" ui:field="name"/>
          <b:HelpInline ui:field="nameHelpInline"/>
        </b:Controls>
      </b:ControlGroup>
    </b:Fieldset>
  </b:Form>
</ui:UiBinder>