<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:c="urn:import:org.uberfire.ext.widgets.common.client.common">
  <ui:style>
    .reset-thumbs {
      margin-left: 0 !important;
    }

    .top-margin {
      margin: 10px 60px !important;
    }
  </ui:style>

  <g:FlowPanel ui:field="content">
    <b:Form ui:field="form" addStyleNames="{style.top-margin}">
      <c:FileUpload ui:field="fileUpload" name="fileUpload"/>
    </b:Form>
    <b:Container>
      <b:Row ui:field="library"/>
    </b:Container>
  </g:FlowPanel>
</ui:UiBinder>