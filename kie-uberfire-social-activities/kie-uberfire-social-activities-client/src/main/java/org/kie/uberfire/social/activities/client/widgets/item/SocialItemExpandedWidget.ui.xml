<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    >
  <ui:style>
    .right {
      text-align: right;
      margin-left : 10px;
      margin-top : 10px;
    }

    .center {
      text-align: center;
      margin-left : 10px;
      margin-top : 10px;
    }

    .left {
      text-align: left;
      margin-left : 10px;
      margin-top : 10px;
    }
  </ui:style>

  <b:Container ui:field="table">
    <b:Row>
      <b:Column size="1" ui:field="icon" addStyleNames="{style.right}">
      </b:Column>
      <b:Column size="11" ui:field="file" addStyleNames="{style.left}">
      </b:Column>
    </b:Row>
  </b:Container>
</ui:UiBinder>