<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <ui:style>
    .palette {
      padding: 5px;
    }
  </ui:style>

  <g:SimplePanel styleName="{style.palette}">
    <b:Accordion>
      <b:AccordionGroup heading="Shapes" defaultOpen="true">
        <g:SimplePanel ui:field="categoryShapes"/>
      </b:AccordionGroup>
      <b:AccordionGroup heading="Fixed shapes">
        <g:SimplePanel ui:field="categoryFixedShapes"/>
      </b:AccordionGroup>
      <b:AccordionGroup heading="Connectors">
        <g:SimplePanel ui:field="categoryConnectors"/>
      </b:AccordionGroup>
      <b:AccordionGroup heading="Containers">
        <g:SimplePanel ui:field="categoryContainers"/>
      </b:AccordionGroup>
    </b:Accordion>
  </g:SimplePanel>

</ui:UiBinder>